<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- users -->
    <changeSet id="v0-schema-users-bankx" author="bankx">
        <createTable tableName="users" schemaName="public">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="login" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <!-- products -->
    <changeSet id="v0-schema-products-bankx" author="bankx">
        <createTable tableName="products" schemaName="public">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="key" type="VARCHAR(50)"/>
            <column name="create_date" type="TIMESTAMP"/>
            <column name="product_id" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>

    <!-- clients -->
    <changeSet id="v0-schema-clients-bankx" author="bankx">
        <createTable tableName="clients" schemaName="public">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_id" type="VARCHAR(50)"/>
            <column name="user_id" type="BIGINT"/>
            <column name="first_name" type="VARCHAR(100)"/>
            <column name="middle_name" type="VARCHAR(100)"/>
            <column name="last_name" type="VARCHAR(100)"/>
            <column name="date_of_birth" type="DATE"/>
            <column name="document_type" type="VARCHAR(50)"/>
            <column name="document_id" type="VARCHAR(100)"/>
            <column name="document_prefix" type="VARCHAR(20)"/>
            <column name="document_suffix" type="VARCHAR(20)"/>
        </createTable>
    </changeSet>

    <!-- client_products -->
    <changeSet id="v0-schema-client-products-bankx" author="bankx">
        <createTable tableName="client_products" schemaName="public">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_id" type="BIGINT"/>
            <column name="product_id" type="BIGINT"/>
            <column name="open_date" type="DATE"/>
            <column name="close_date" type="DATE"/>
            <column name="status" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>

    <!-- accounts -->
    <changeSet id="v0-schema-accounts-bankx" author="bankx">
        <createTable tableName="accounts" schemaName="public">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_id" type="VARCHAR(50)"/>
            <column name="product_id" type="VARCHAR(50)"/>
            <column name="balance" type="DECIMAL(18,2)"/>
            <column name="interest_rate" type="DECIMAL(5,2)"/>
            <column name="is_recalc" type="BOOLEAN"/>
            <column name="card_exist" type="BOOLEAN"/>
            <column name="status" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>

    <!-- cards -->
    <changeSet id="v0-schema-cards-bankx" author="bankx">
        <createTable tableName="cards" schemaName="public">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="account_id" type="BIGINT"/>
            <column name="card_id" type="VARCHAR(50)"/>
            <column name="payment_system" type="VARCHAR(50)"/>
            <column name="status" type="VARCHAR(50)"/>
            <column name="expire_date" type="DATE"/>
        </createTable>
    </changeSet>

    <!-- payments -->
    <changeSet id="v0-schema-payments-bankx" author="bankx">
        <createTable tableName="payments" schemaName="public">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="account_id" type="BIGINT"/>
            <column name="payment_date" type="TIMESTAMP"/>
            <column name="amount" type="DECIMAL(18,2)"/>
            <column name="is_credit" type="BOOLEAN"/>
            <column name="payed_at" type="TIMESTAMP"/>
            <column name="type" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>

    <!-- transactions -->
    <changeSet id="v0-schema-transactions-bankx" author="bankx">
        <createTable tableName="transactions" schemaName="public">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="account_id" type="BIGINT"/>
            <column name="card_id" type="BIGINT"/>
            <column name="type" type="VARCHAR(50)"/>
            <column name="amount" type="DECIMAL(18,2)"/>
            <column name="status" type="VARCHAR(50)"/>
            <column name="timestamp" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

    <!-- product_registry -->
    <changeSet id="v0-schema-product-registry-bankx" author="bankx">
        <createTable tableName="product_registry" schemaName="public">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_id" type="VARCHAR(50)"/>
            <column name="account_id" type="BIGINT"/>
            <column name="product_id" type="VARCHAR(50)"/>
            <column name="interest_rate" type="DECIMAL(5,2)"/>
            <column name="open_date" type="DATE"/>
        </createTable>
    </changeSet>

    <!-- payment_registry -->
    <changeSet id="v0-schema-payment-registry-bankx" author="bankx">
        <createTable tableName="payment_registry" schemaName="public">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_registry_id" type="BIGINT"/>
            <column name="payment_date" type="DATE"/>
            <column name="amount" type="DECIMAL(18,2)"/>
            <column name="interest_rate_amount" type="DECIMAL(18,2)"/>
            <column name="debt_amount" type="DECIMAL(18,2)"/>
            <column name="expired" type="BOOLEAN"/>
            <column name="payment_expiration_date" type="DATE"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
