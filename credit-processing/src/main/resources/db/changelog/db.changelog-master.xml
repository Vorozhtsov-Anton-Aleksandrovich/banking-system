<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- 1. Таблица product_registry -->
    <changeSet id="1" author="init">
        <createTable tableName="product_registry">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="client_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="account_id" type="BIGINT"/>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="interest_rate" type="DECIMAL(5,2)"/>
            <column name="open_date" type="DATE"/>
        </createTable>
    </changeSet>

    <!-- 2. Таблица payment_registry -->
    <changeSet id="2" author="init">
        <createTable tableName="payment_registry">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_registry_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="payment_date" type="DATE"/>
            <column name="amount" type="DECIMAL(19,2)">
                <constraints nullable="false"/>
            </column>
            <column name="interest_rate_amount" type="DECIMAL(19,2)"/>
            <column name="debt_amount" type="DECIMAL(19,2)"/>
            <column name="expired" type="BOOLEAN" defaultValueBoolean="false"/>
            <column name="payment_expiration_date" type="DATE"/>
        </createTable>
    </changeSet>

    <!-- 3. Тестовые данные: product_registry -->
    <changeSet id="3" author="init">
        <insert tableName="product_registry">
            <column name="client_id" valueNumeric="1"/>
            <column name="account_id" valueNumeric="1"/>
            <column name="product_id" valueNumeric="101"/>
            <column name="interest_rate" valueNumeric="1.5"/>
            <column name="open_date" valueDate="2025-03-01"/>
        </insert>
        <insert tableName="product_registry">
            <column name="client_id" valueNumeric="2"/>
            <column name="account_id" valueNumeric="2"/>
            <column name="product_id" valueNumeric="102"/>
            <column name="interest_rate" valueNumeric="2.0"/>
            <column name="open_date" valueDate="2025-04-01"/>
        </insert>
    </changeSet>

    <!-- 4. Тестовые данные: payment_registry -->
    <changeSet id="4" author="init">
        <insert tableName="payment_registry">
            <column name="product_registry_id" valueNumeric="1"/>
            <column name="payment_date" valueDate="2025-06-01"/>
            <column name="amount" valueNumeric="200.00"/>
            <column name="interest_rate_amount" valueNumeric="3.00"/>
            <column name="debt_amount" valueNumeric="800.00"/>
            <column name="expired" valueBoolean="false"/>
            <column name="payment_expiration_date" valueDate="2025-06-30"/>
        </insert>
        <insert tableName="payment_registry">
            <column name="product_registry_id" valueNumeric="2"/>
            <column name="payment_date" valueDate="2025-07-01"/>
            <column name="amount" valueNumeric="150.00"/>
            <column name="interest_rate_amount" valueNumeric="2.50"/>
            <column name="debt_amount" valueNumeric="350.00"/>
            <column name="expired" valueBoolean="false"/>
            <column name="payment_expiration_date" valueDate="2025-07-31"/>
        </insert>
    </changeSet>

</databaseChangeLog>
