            <column name="document_id" value="123456789"/>
            <column name="document_prefix" value="AA"/>
            <column name="document_suffix" value="01"/>
        </insert>
        <insert tableName="clients">
            <column name="client_id" value="C002"/>
            <column name="user_id" valueNumeric="2"/>
            <column name="first_name" value="Bob"/>
