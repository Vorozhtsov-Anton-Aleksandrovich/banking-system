            <column name="document_id" value="987654321"/>
            <column name="document_prefix" value="BB"/>
            <column name="document_suffix" value="02"/>
        </insert>
    </changeSet>

    <!-- 7. Тестовые данные: products -->
    <changeSet id="7" author="init">
        <insert tableName="products">
            <column name="name" value="Savings Account"/>
            <column name="key" value="SAVINGS"/>
            <column name="create_date" valueDate="2025-01-01T00:00:00"/>
            <column name="product_id" value="P001"/>
        </insert>
        <insert tableName="products">
            <column name="name" value="Credit Card"/>
            <column name="key" value="CREDIT"/>
            <column name="create_date" valueDate="2025-02-01T00:00:00"/>
            <column name="product_id" value="P002"/>
        </insert>
    </changeSet>

    <!-- 8. Тестовые данные: client_products -->
    <changeSet id="8" author="init">
        <insert tableName="client_products">
            <column name="client_id" valueNumeric="1"/>
            <column name="product_id" valueNumeric="1"/>
            <column name="open_date" valueDate="2025-03-01"/>
